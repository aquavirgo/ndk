<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ndk.myndk.MainActivity"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">


        <TableRow>
            <TextView android:id="@+id/uiKeyLabel" android:text="Key : "/>
            <EditText android:id="@+id/uiKeyEdit"> <requestFocus/> </EditText>
        </TableRow>
        <TableRow>
            <TextView android:id="@+id/uiValueLabel" android:text="Value : "/>
            <EditText android:id="@+id/uiValueEdit"/>
        </TableRow>

        <TableRow>
            <TextView android:id="@+id/uiTypeLabel" android:text="Type : " android:layout_height="match_parent"
                android:gravity="center_vertical"/>
          <Spinner android:id="@+id/uiTypeSpiner"></Spinner>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <Button
            android:id="@+id/uiGetValueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Value" />

        <Button
            android:id="@+id/uiSetValueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Value" />

    </LinearLayout>


</LinearLayout>
